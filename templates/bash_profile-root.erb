# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
    . ~/.bashrc
fi

if [ "$SSH_USER" != "" ]; then
  logger -ip auth.notice -t sshd "Accepted publickey for $SSH_USER"
  export HISTTIMEFORMAT="[%Y-%m-%d %H:%M:%S - $SSH_USER] "
  [ -f ~/.bash_$SSH_USER ] && source ~/.bash_$SSH_USER
fi

# User specific environment and startup programs

PATH=$PATH:$HOME/bin

export PATH
